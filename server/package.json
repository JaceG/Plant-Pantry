{
  "name": "plant-pantry-server",
  "version": "1.0.0",
  "description": "Plant Pantry Backend Server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "ts-node-dev src/scripts/seed.ts",
    "seed:openfoodfacts": "ts-node-dev src/scripts/seedFromOpenFoodFacts.ts",
    "test:api": "ts-node-dev src/scripts/testOpenFoodFacts.ts",
    "filter:tsv": "ts-node-dev src/scripts/filterOpenFoodFactsTSV.ts",
    "import:csv": "ts-node-dev src/scripts/importFilteredCSV.ts",
    "import:products-only": "ts-node-dev src/scripts/importProductsOnly.ts",
    "convert:csv-to-json": "ts-node-dev src/scripts/convertCSVtoJSON.ts",
    "create:availability": "ts-node-dev src/scripts/createSeedAvailability.ts",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "plant-pantry",
    "backend",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/csv-parse": "^1.1.12",
    "@types/csv-stringify": "^1.4.3",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
